{% extends 'layouts/base.njk' %}

{% block nav %}
<ul class="category--list">
  {% for experiment in collections.experiments %}
  <li>
    <a href="{{ experiment.url }}" class="category--title">
      {{ experiment.data.title }}
      <div class="tag--tech">{% for tag in experiment.data.tags %}{{tag}}{% if loop.index !== loop.length %} / {% endif -%}{% endfor %}</div>
    </a>
  </li>
  {% endfor %}
</ul>
{% endblock %}
