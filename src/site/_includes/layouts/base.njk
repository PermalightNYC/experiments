<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="view-transition" content="same-origin" />
		<title>{{ title or metadata.title }}</title>
		{%- include 'favicon-social.njk' -%}
    {% set css %}
      {% include "css/normalize.css" %}
      {% include "css/main.css" %}
    {% endset %}
    <style>{{ css | cssmin | safe }}</style>
		{% block styles %}{% endblock %}
	</head>
	<body class="{% block bodyClass %}{% endblock %}">

		{% block site_title %}
		<a class="page--title" href="/"><h1>Permalight Labs</h1></a>
		{% endblock %}
		{% block nav %}
			{% include 'button--back.njk' %}
		{% endblock %}

    {% block content %}
      {{ layoutContent | safe }}
    {% endblock %}

		{% block footer %}
		<footer>
			&copy; <a href="http://prmlg.ht/">PERMALIGHT</a> {% year %}
		</footer>
		{% endblock %}

		{%- include 'ga.njk' -%}
		{%- include 'typekit.njk' -%}
		{% block scripts %}{% endblock %}

    {% if eleventy.env.runMode === 'build' %}
      <script defer data-domain="permalightnyc.com" src="https://plausible.io/js/script.outbound-links.js"></script>
      <script>window.plausible = window.plausible || function() { (window.plausible.q = window.plausible.q || []).push(arguments) }</script>
    {% endif %}
		<!-- Current page: {{ page.url | url }} -->
	</body>
</html>
