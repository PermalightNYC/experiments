<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ title or metadata.title }}</title>
		<link rel="stylesheet" href="{{ '/css/main.css' | url }}?ver=1" />
		{%- include 'favicon-social.njk' -%}
		{% block styles %}{% endblock %}
	</head>
	<body class="{% block bodyClass %}{% endblock %}">

		{% block site_title %}
		<a class="page--title" href="/"><h1>Permalight Labs</h1></a>
		{% endblock %}
		{% block nav %}
			{% include 'button--back.njk' %}
		{% endblock %}

		{{ layoutContent | safe }}

		{% block footer %}
		<footer>
			&copy; <a href="http://prmlg.ht/">PERMALIGHT</a> 2018
		</footer>
		{% endblock %}

		{%- include 'ga.njk' -%}
		{%- include 'typekit.njk' -%}
		{% block scripts %}{% endblock %}
		<!-- Current page: {{ page.url | url }} -->
	</body>
</html>
